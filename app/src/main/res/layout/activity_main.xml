<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soroush.convertmilestokm.MainActivity">

    <Button
        android:id="@+id/buttonConvMilesToKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextKm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Convert Miles To Km"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Km:"
        android:textSize="36sp"
        android:layout_below="@+id/Miles"
        android:layout_alignLeft="@+id/Miles"
        android:layout_alignStart="@+id/Miles"
        android:layout_marginTop="73dp" />

    <TextView
        android:id="@+id/Miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="141dp"
        android:text="Miles:"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextMiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/Miles"
        android:layout_toRightOf="@+id/Miles"
        android:layout_toEndOf="@+id/Miles"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignTop="@+id/Miles" />

    <EditText
        android:id="@+id/editTextKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/Km"
        android:layout_alignLeft="@+id/editTextMiles"
        android:layout_alignStart="@+id/editTextMiles" />

    <Button
        android:id="@+id/buttonConvKmToMiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Convert Km To Miles"
        android:textSize="18sp" />
</android.widget.RelativeLayout>
